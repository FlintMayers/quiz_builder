{% extends 'base.html.twig' %}

{% block body %}

    <h3 class="text-center mt-5 mb-5">Quiz list</h3>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <th scope="row">{{ quiz.id }}</th>
                <td>{{ quiz.title }}</td>
                <td>
                    <a href="{{ path('delete_quiz', {'id': quiz.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
